.so man1/alc_origin.1
.SH NAME
\fBlengthExpr\fP \- returns the number of arguments in an expression
.SH SYNOPSYS
.nf
#include "logmmm.h"
int lengthExpr(expr)
chain_list *expr;
.fi
.SH PARAMETER
.TP 20
\fIexpr\fP
expression
.SH DESCRIPTION
\fBlengthExpr()\fP returns the number of arguments of \fIexpr\fP of the first level. If \fIexpr\fP is an atomic expression, the function returns 1.
.SH EXAMPLE
.nf
#include "mutnnn.h"		/* mbk utilities */
#include "logmmm.h"
chain_list *expr;
expr = createExpr(OR);
addQExpr(expr,createAtom("a"));
addQExpr(expr,createAtom("b"));
printf("%d",lengthExpr(expr));
/* it will display
2
*/
freeExpr(expr);
.fi
.SH PROGRAM
.nf
int lengthExpr(expr)
chain_list *expr;
{
if (ATOM(expr))
   return(1)
else
   {
   int cpt = 0;
   while (expr = CDR(expr)) cpt++;
   return(cpt);
   }
} 
.fi
