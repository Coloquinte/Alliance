	;  ###--------------------------------------------------------###
	;  #  illegal instruction address (segment)			#
	;  ###--------------------------------------------------------###

it_handler	equ	X"fffffff0"

		org	X"7fffff00"
		start	init

init:
		loadi	r31, back_from_exception
		loadi	r20, it_handler
		jr	r20			; EXCEPTION (segment)
		nop

	;  ###--------------------------------------------------------###
	;  #   jump to good if returned from exception			#
	;  ###--------------------------------------------------------###

back_from_exception:
		j	good
		nop
		
		org	X"7ffffff0"
good		j	good
		nop
bad		j	bad
		nop
		end
