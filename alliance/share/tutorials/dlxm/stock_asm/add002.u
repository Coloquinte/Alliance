	;  ###--------------------------------------------------------###
	;  #   signed addition						#
	;  ###--------------------------------------------------------###

val1		equ	X"1000"
val2		equ	X"f000"

		org	X"7fffff00"
		start	init

init:
		addi	r11, r0 , val1
		addi	r12, r0 , val2
		add	r13, r12, r11

		seqi	r6 , r13, (val1 + val2)
		bnez	r6 , good
		nop
		j	bad
		nop

		org	X"7ffffff0"
good		j	good
		nop
bad		j	bad
		nop
		end
