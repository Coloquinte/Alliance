	;  ###--------------------------------------------------------###
	;  #  illegal instruction address (alignment)			#
	;  ###--------------------------------------------------------###

		org	X"7fffff00"
		start	init

init:
		loadi	r31, back_from_exception
		loadi	r20, target_adr + 1	; missaligned address in r20
target_adr:
		jr	r20			; EXCEPTION (alignment)
		nop

	;  ###--------------------------------------------------------###
	;  #   jump to good if returned from exception			#
	;  ###--------------------------------------------------------###

back_from_exception:
		j	good
		nop
		
		org	X"7ffffff0"
good		j	good
		nop
bad		j	bad
		nop
		end
