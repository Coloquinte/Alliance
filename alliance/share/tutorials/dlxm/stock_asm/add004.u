	;  ###--------------------------------------------------------###
	;  #   signed substraction					#
	;  ###--------------------------------------------------------###

limit		equ	 7
first		equ	10

		org	X"7fffff00"
		start	init

init :
		loadi	r1      , limit
		loadi	r2      , first

loop :
		subi	r2 , r2 , 1
		sgt	r3 , r2 , r1
		bnez	r3 , loop
		nop

		seq	r10, r2, r1
		beqz	r10, bad
		nop
		j	good
		nop

		org	X"7ffffff0"
good		j	good
		nop
bad		j	bad
		nop
		end
