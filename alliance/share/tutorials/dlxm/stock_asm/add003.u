	;  ###--------------------------------------------------------###
	;  #   signed addition						#
	;  ###--------------------------------------------------------###

val1		equ	X"f1c1"
val2		equ	X"1112"

		org	X"7fffff00"
		start	init

init:
		addi	r1 , r0 , val1
		addi	r2 , r0 , val2

		addi	r3 , r1 , 1
		addi	r4 , r2 , 2
		add	r17, r3 , r4

		lhi	r29     , (val1 + val2) + 3
		srli	r29, r29, 16
		seq	r20, r17, r29

		bnez	r20, good
		nop
		j	bad
		nop

		org	X"7ffffff0"
good		j	good
		nop
bad		j	bad
		nop
		end
